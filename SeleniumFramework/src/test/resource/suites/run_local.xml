<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is created for running test suit -->
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- Run parallel with number of threads -->
<suite name="Suite" thread-count="5" parallel="methods">

	<listeners>
		<listener class-name="core.report.TestListener" />
	</listeners>
	
  	<test name="Run Local Suit Test">
  		<parameter name="driverConfig" value="chrome.local" />
		<parameter name="platform" value="windows" />	
  		<classes>
			<class name="tests.OrangeHRM.LeaveTest"><methods><include name="TC12"></include></methods></class>
			<class name="tests.OrangeHRM.PIMTest"><methods><include name="TC06"></include></methods></class>
			<class name="tests.OrangeHRM.RecruitmentTest"><methods><include name="TC15"></include></methods></class>
  		</classes>
  	</test>
  	<test name="Run Firefox Local Suit Test">
  		<parameter name="driverConfig" value="firefox.local" />
		<parameter name="platform" value="windows" />	
  		<classes>
			<class name="tests.OrangeHRM.LeaveTest"><methods><include name="TC12"></include></methods></class>
			<class name="tests.OrangeHRM.PIMTest"><methods><include name="TC06"></include></methods></class>
			<class name="tests.OrangeHRM.RecruitmentTest"><methods><include name="TC15"></include></methods></class>
  		</classes>
  	</test>
  
</suite> <!-- Suite -->